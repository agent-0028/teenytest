#!/usr/bin/env node

var teenytest = require('../index'),
    testGlob = process.argv[2] || 'test/lib/**/*.js',
    fs = require('fs')

teenytest(testGlob, {
  helperPath: fs.existsSync('test/helper.js') ? 'test/helper.js' : null
}, function(er, passing) {
  process.exit(!er && passing ? 0 : 1)
})


